@model Cloth

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbNailUrl" alt="image for madhu shop" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3><a asp-controller="Cloth" asp-action="Details" asp-route-clothid="@Model.ClothId">@Model.Name</a></h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-ClothId="@Model.ClothId">Add to Cart</a>
            </p>
        </div>
    </div>
</div>